{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "declaration": true,
        "lib": ["es2017", "es2018.promise"],
        "outDir": "./dist/",
        "noImplicitAny": false,
        "baseUrl": "src",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "strictNullChecks": false
    },
    "include": ["src"]
}
